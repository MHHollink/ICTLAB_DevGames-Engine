<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:contentDescription="@string/avatar"
                android:id="@+id/avatar_view"
                android:src="@mipmap/noPhoto" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingStart="15dp"
                android:paddingEnd="0dp">

                <TextView
                    android:id="@+id/txt_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/dummy_name"
                    android:textColor="@color/granny_smith"
                    android:textStyle="bold"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/txt_score"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/dummy_score"
                    android:paddingTop="7dp"
                    android:textColor="@color/shadow_green"
                    android:textStyle="italic"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/txt_projects"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/dummy_projects"
                    android:paddingTop="7dp"
                    android:textColor="@color/shadow_green"
                    android:textStyle="italic"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/txt_commits"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/dummy_commits"
                    android:paddingTop="7dp"
                    android:textColor="@color/shadow_green"
                    android:textStyle="italic"
                    android:textSize="15sp"/>

            </LinearLayout>

        </LinearLayout>

        <View
            android:alpha="0.5"
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/shadow_green"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_issues_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/issues"
                android:paddingTop="7dp"
                android:textColor="@color/shadow_green"
                android:textStyle="italic"
                android:textSize="15sp"/>


        </LinearLayout>

    </LinearLayout>

</ScrollView>
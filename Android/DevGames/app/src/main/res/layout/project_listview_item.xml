<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:background="@color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/project_name"
        android:text="@string/loading"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/cornflower"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/project_description"
        android:text="@string/loading"
        android:layout_marginStart="15dp"
        android:textColor="@color/cornflower"
        android:layout_below="@+id/project_name"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/project_score"
        android:text="@string/loading"
        android:layout_marginEnd="15dp"
        android:textColor="@color/cornflower"
        android:layout_above="@+id/project_description"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/project_dev_count"
        android:text="@string/loading"
        android:layout_below="@+id/project_description"
        android:textColor="@color/cornflower"
        android:layout_alignStart="@+id/project_description" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/project_commit_count"
        android:text="@string/loading"
        android:textColor="@color/cornflower"
        android:layout_marginBottom="15dp"
        android:layout_below="@+id/project_description"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
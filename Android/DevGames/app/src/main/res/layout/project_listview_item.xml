<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:background="@color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/project_name"
        android:text="@string/loading"
        android:textSize="18sp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/cornflower_dark" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/project_description"
        android:text="@string/loading"
        android:layout_marginStart="15dp"
        android:textColor="@color/cornflower"
        android:layout_below="@+id/project_name"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/project_score"
        android:text="@string/loading"
        android:layout_marginEnd="18dp"
        android:textColor="@color/cornflower_light"
        android:layout_above="@+id/project_description"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/project_dev_count"
        android:text="@string/loading"
        android:layout_below="@+id/project_description"
        android:textColor="@color/cornflower"
        android:layout_alignStart="@+id/project_description" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_filler"
        android:text="@string/list_view_explanation"
        android:textColor="@color/cornflower"
        android:layout_alignTop="@+id/project_dev_count"
        android:layout_toEndOf="@+id/project_dev_count"
        android:layout_alignParentEnd="false"
        android:layout_marginStart="6sp"
        android:layout_marginEnd="6sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/project_commit_count"
        android:text="@string/loading"
        android:textColor="@color/cornflower"
        android:layout_alignTop="@+id/text_filler"
        android:layout_toEndOf="@+id/text_filler" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_filler2"
        android:text="@string/commits"
        android:textColor="@color/cornflower"
        android:layout_alignTop="@+id/project_commit_count"
        android:layout_toEndOf="@+id/project_commit_count"
        android:layout_marginStart="6sp" />

</RelativeLayout>